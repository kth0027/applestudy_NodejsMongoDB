        <h4 class="ml-2 my-3 text-center">채팅방(Socket)</h4>


        <div class="container p-4 detail">
            <div class="row">
                <div id="content"></div>
            </div>
            <div class="row">
                <input id="input1" class="col-9">
                <button id="send" class="col-2 offset-1 btn-outline-light text-dark border-danger">서버에 메세지 보내기</button>
            </div>
            <div class="row mt-3">
                <button id="room1" class="btn btn-outline-warning col-3 mx-2">채팅방1 입장</button>
                <button id="room1-send" class="btn btn-outline-warning col-3 mx-2">채팅방1에서 메세지 보내기</button>
            </div>
        </div>

        <script>
            var socket = io();

            $('#room1').click(function () {
                socket.emit('joinroom', '채팅방1 입장');
            });

            $('#room1-send').click(function () {
                socket.emit('room1-send', '채팅방1에 메세지 보내기')
            });


            $('#send').click(function () {
                socket.emit('user-send', $('#input1').val())
            });

            socket.on('broadcast', function (data) {
                $('#content').append('<div>' + data + '</div>')
            });
        </script>









